{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"lib": ["dom", "es6", "dom.iterable", "scripthost"],
		"sourceMap": true,
		"outDir": "./framework.src/content/js",
		"removeComments": true,
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"exclude": ["node_modules"]
}
